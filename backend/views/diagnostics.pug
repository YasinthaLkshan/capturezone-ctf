doctype html
html
  head
    title CyberSphere Labs - System Diagnostics
    style.
      body { font-family: Arial, sans-serif; margin: 20px; background: #1a1a1a; color: #00ff00; }
      .container { max-width: 800px; margin: 0 auto; }
      .header { text-align: center; border-bottom: 2px solid #00ff00; padding-bottom: 10px; }
      .report { background: #2a2a2a; padding: 20px; margin: 20px 0; border: 1px solid #00ff00; }
      .error { color: #ff4444; }
  body
    .container
      .header
        h1 CyberSphere Labs
        h2 System Diagnostics Report
      
      .report
        h3 Diagnostic Information
        p Username: #{username}
        p Timestamp: #{timestamp}
        p System: #{system}
        
        if error
          .error
            h4 Error Details:
            p= error
        
        // Vulnerable template processing area
        // This is where SSTI can occur
        div!= result || ''